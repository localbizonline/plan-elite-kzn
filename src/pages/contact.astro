---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import FAQ from '../components/FAQ.astro';
import { site } from '../site.config';
import { getInnerHero, getHomeHero } from '../images';

const whatsappUrl = `https://wa.me/${site.whatsapp}?text=${encodeURIComponent(site.whatsappMessage)}`;
const heroImage = getInnerHero() || getHomeHero()!;
---

<BaseLayout
  title={site.contact.metaTitle}
  description={site.contact.metaDescription}
>
  <Hero
    title={site.contact.heroTitle}
    subtitle={site.contact.heroSubtitle}
    showCtas={false}
    backgroundImage={heroImage}
  />

  <!-- Contact Info Cards -->
  <section class="py-16 md:py-20 bg-surface">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Phone -->
        <a href={`tel:${site.phoneRaw}`} class="bg-background rounded-md p-8 text-center shadow-sm hover:shadow-md transition-shadow group">
          <div class="w-16 h-16 bg-accent/10 group-hover:bg-accent/20 rounded-md flex items-center justify-center mx-auto mb-5 transition-colors">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-lg font-[family-name:var(--font-display)] uppercase text-primary mb-2">Phone</h3>
          <p class="text-accent font-bold text-lg">{site.phone}</p>
          <p class="text-muted text-sm mt-1">Call us directly</p>
        </a>
        <!-- WhatsApp -->
        <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="bg-background rounded-md p-8 text-center shadow-sm hover:shadow-md transition-shadow group">
          <div class="w-16 h-16 bg-green-500/10 group-hover:bg-green-500/20 rounded-md flex items-center justify-center mx-auto mb-5 transition-colors">
            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
            </svg>
          </div>
          <h3 class="text-lg font-[family-name:var(--font-display)] uppercase text-primary mb-2">WhatsApp</h3>
          <p class="text-green-600 font-bold text-lg">Message Us</p>
          <p class="text-muted text-sm mt-1">Send a message anytime</p>
        </a>
        <!-- Email -->
        <a href={`mailto:${site.email}`} class="bg-background rounded-md p-8 text-center shadow-sm hover:shadow-md transition-shadow group">
          <div class="w-16 h-16 bg-accent/10 group-hover:bg-accent/20 rounded-md flex items-center justify-center mx-auto mb-5 transition-colors">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-[family-name:var(--font-display)] uppercase text-primary mb-2">Email</h3>
          <p class="text-accent font-bold text-sm md:text-base break-all">{site.email}</p>
          <p class="text-muted text-sm mt-1">We reply within hours</p>
        </a>
        <!-- Address -->
        <div class="bg-background rounded-md p-8 text-center shadow-sm">
          <div class="w-16 h-16 bg-accent/10 rounded-md flex items-center justify-center mx-auto mb-5">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-[family-name:var(--font-display)] uppercase text-primary mb-2">Address</h3>
          <p class="text-muted font-bold text-sm md:text-base">{site.address.street}<br />{site.address.city}<br />{site.address.region}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-16 md:py-20 bg-background">
    <div class="max-w-2xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-[family-name:var(--font-display)] uppercase text-primary mb-3">
          Send Us a Message
        </h2>
        <p class="text-muted text-lg font-[family-name:var(--font-body)]">
          Fill in the form below and we'll get back to you as soon as possible.
        </p>
      </div>
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/thank-you/"
        class="space-y-5"
      >
        <input type="hidden" name="form-name" value="contact" />
        <p class="hidden">
          <label>Don't fill this out: <input name="bot-field" /></label>
        </p>

        <div>
          <label for="name" class="block text-sm font-bold text-primary mb-1.5 font-[family-name:var(--font-body)]">
            Your Name <span class="text-accent">*</span>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            autocomplete="name"
            class="w-full px-4 py-3 border border-gray-300 rounded-md text-text bg-background focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-colors font-[family-name:var(--font-body)]"
            placeholder="John Smith"
          />
        </div>

        <div>
          <label for="phone" class="block text-sm font-bold text-primary mb-1.5 font-[family-name:var(--font-body)]">
            Phone Number <span class="text-accent">*</span>
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            required
            autocomplete="tel"
            class="w-full px-4 py-3 border border-gray-300 rounded-md text-text bg-background focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-colors font-[family-name:var(--font-body)]"
            placeholder="082 123 4567"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-bold text-primary mb-1.5 font-[family-name:var(--font-body)]">
            Email (optional)
          </label>
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="email"
            class="w-full px-4 py-3 border border-gray-300 rounded-md text-text bg-background focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-colors font-[family-name:var(--font-body)]"
            placeholder="john@example.com"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-bold text-primary mb-1.5 font-[family-name:var(--font-body)]">
            Message <span class="text-accent">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows="4"
            class="w-full px-4 py-3 border border-gray-300 rounded-md text-text bg-background focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-colors resize-y font-[family-name:var(--font-body)]"
            placeholder="Tell us about your project or question..."
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-accent hover:bg-accent-light text-white px-8 py-4 rounded-md text-lg font-bold transition-colors duration-200 shadow-lg font-[family-name:var(--font-body)]"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>

  <!-- Operating Hours -->
  <section class="py-12 bg-primary">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-[family-name:var(--font-display)] uppercase text-white mb-6">Operating Hours</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white/10 rounded-md p-8">
          <h3 class="text-xl font-[family-name:var(--font-display)] uppercase text-white mb-3">{site.contact.hours.standard.label}</h3>
          <p class="text-white/80 text-lg">{site.contact.hours.standard.days}</p>
          <p class="text-white text-2xl font-bold mt-1">{site.contact.hours.standard.hours}</p>
        </div>
        <div class="bg-accent/30 rounded-md p-8 border-2 border-accent">
          <h3 class="text-xl font-[family-name:var(--font-display)] uppercase text-white mb-3">{site.contact.hours.emergency.label}</h3>
          <p class="text-white/80 text-lg">{site.contact.hours.emergency.days}</p>
          <p class="text-white text-2xl font-bold mt-1">{site.contact.hours.emergency.hours}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Maps -->
  <section class="py-16 md:py-20 bg-surface">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl md:text-4xl font-[family-name:var(--font-display)] uppercase text-primary text-center mb-8">
        Find Us
      </h2>
      <div class="rounded-md overflow-hidden shadow-lg">
        <iframe
          src={site.address.mapsEmbed}
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title={`${site.name} location in ${site.address.city}, ${site.address.region}`}
        ></iframe>
      </div>
    </div>
  </section>

  <FAQ faqs={site.contact.faqs} />
</BaseLayout>
