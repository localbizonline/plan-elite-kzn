---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import EditableImage from '../../components/EditableImage.astro';
import ContactForm from '../../components/ContactForm.astro';
import FAQ from '../../components/FAQ.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import { Image } from 'astro:assets';
import { site } from '../../site.config';
import { getEdit } from '../../utils/content-overrides';
import { getServiceImage, getHomeHero, getServiceGalleryImages } from '../../images';

export function getStaticPaths() {
  return site.services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
const si = site.services.findIndex(s => s.slug === service.slug);

const heroImage = getServiceImage(service.slug, 'hero') || getHomeHero()!;
const contentImage = getServiceImage(service.slug, 'content') || getServiceImage(service.slug, 'card') || getHomeHero()!;
const cardImage = getServiceImage(service.slug, 'card') || getHomeHero()!;
const serviceGallery = getServiceGalleryImages(service.slug);
---

<BaseLayout
  title={`${service.title} | ${site.name}`}
  description={service.description}
>
  <Hero
    title={getEdit(`services.${si}.title`, service.title)}
    subtitle={getEdit(`services.${si}.heroSubtitle`, service.heroSubtitle)}
    data-edit-title={`services.${si}.title`}
    data-edit-subtitle={`services.${si}.heroSubtitle`}
    data-edit-image={`services.${si}.heroImage`}
    backgroundImage={heroImage}
  />

  <TrustBadges />

  <!-- Main Content -->
  <section class="py-16 md:py-20 bg-surface">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <EditableImage
            editKey={`services.${si}.cardImage`}
            src={cardImage}
            alt={`${service.title} - ${site.name}`}
            class="rounded-md shadow-lg w-full object-cover"
            width={600}
            height={400}
          />
        </div>
        <div>
          <h2 class="text-3xl md:text-4xl font-[family-name:var(--font-display)] text-primary mb-4" data-edit={`services.${si}.title`}>
            {getEdit(`services.${si}.title`, service.title)}
          </h2>
          <div class="text-muted text-lg leading-relaxed mb-6 [&>p]:mb-3 [&>ul]:list-disc [&>ul]:pl-5 [&>ul]:mb-3 [&>ul>li]:mb-1.5 [&>p:last-child]:mb-0 [&>ul:last-child]:mb-0" data-edit={`services.${si}.longDescription`} set:html={getEdit(`services.${si}.longDescription`, service.longDescription)} />
          <a
            href={`tel:${site.phoneRaw}`}
            class="inline-flex items-center gap-2 bg-accent hover:bg-accent-light text-white font-bold py-3 px-8 rounded-md transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call Now: {site.phone}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Cover -->
  {service.whatWeCover.length > 0 && (
    <section class="py-16 md:py-20 bg-background">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <h2 class="text-3xl md:text-4xl font-[family-name:var(--font-display)] text-primary mb-10 text-center">
          What We Cover
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {service.whatWeCover.map((item) => (
            <div class="bg-surface rounded-md p-8 shadow-md border-t-4 border-accent">
              <h3 class="text-xl font-bold text-primary mb-3">{item.title}</h3>
              <p class="text-muted leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Why Choose Us -->
  {service.whyChooseUs.length > 0 && (
    <section class="py-16 md:py-20 bg-surface">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-[family-name:var(--font-display)] text-primary mb-6">
              Why Choose {site.name}?
            </h2>
            <ul class="space-y-4">
              {service.whyChooseUs.map((item) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  <span class="text-muted"><strong class="text-primary">{item.bold}</strong> {item.text}</span>
                </li>
              ))}
            </ul>
          </div>
          <div>
            <EditableImage
              editKey={`services.${si}.contentImage`}
              src={contentImage}
              alt={`${service.title} service by ${site.name}`}
              class="rounded-md shadow-lg w-full object-cover"
              width={600}
              height={400}
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </section>
  )}

  {/* Service Gallery — per-service images if available, otherwise homepage gallery */}
  {serviceGallery.length > 0 && (
    <section class="py-16 md:py-20 bg-background">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-10">
          <span class="text-accent font-bold text-sm uppercase tracking-wider">Gallery</span>
          <h2 class="text-3xl md:text-4xl font-[family-name:var(--font-display)] text-primary mt-2 mb-4">
            Our {service.title} Work
          </h2>
        </div>
        <div class={`grid gap-4 md:gap-6 ${
          serviceGallery.length === 1
            ? 'grid-cols-1 max-w-2xl mx-auto'
            : serviceGallery.length === 2
              ? 'grid-cols-1 sm:grid-cols-2'
              : 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3'
        }`}>
          {serviceGallery.map((img, i) => (
            <div class="group rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
              <div class="aspect-[4/3] overflow-hidden">
                <EditableImage
                  editKey={`services.${si}.gallery.${i}`}
                  src={img}
                  alt={`${service.title} by ${site.name} — example ${i + 1}`}
                  width={600}
                  height={450}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <FAQ faqs={service.faqs} />
  <ContactForm />
</BaseLayout>
