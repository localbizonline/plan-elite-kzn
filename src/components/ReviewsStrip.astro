---
import { site } from '../site.config';

const reviews = site.reviews.items.slice(0, 3);
const hasReviews = reviews.length > 0;
---

{hasReviews && (
  <section class="py-16 md:py-20 bg-surface">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-[family-name:var(--font-display)] uppercase text-primary mb-3">
          What Our Clients Say
        </h2>
        <div class="flex items-center justify-center gap-1 mb-2">
          {[1, 2, 3, 4, 5].map(() => (
            <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
        <p class="text-muted text-base">{site.reviews.sourceSummary}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {reviews.map((review) => (
          <div class="bg-background rounded-md p-6 shadow-sm border border-gray-100">
            <div class="flex gap-0.5 mb-3">
              {Array.from({ length: review.rating }).map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <blockquote class="text-text text-base leading-relaxed mb-4 font-[family-name:var(--font-body)]">
              <span class="text-accent text-lg font-bold">"</span>{review.text}<span class="text-accent text-lg font-bold">"</span>
            </blockquote>
            <div class="flex items-center justify-between border-t border-gray-100 pt-3">
              <p class="font-bold text-primary text-base">{review.name}</p>
              {review.source && <p class="text-xs text-accent font-bold">{review.source}</p>}
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-8">
        <a
          href="/reviews/"
          class="inline-flex items-center gap-2 text-accent hover:text-accent-light font-bold transition-colors"
        >
          See All Reviews
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>
)}
