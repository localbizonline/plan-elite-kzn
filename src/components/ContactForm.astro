---
import { site } from '../site.config';

const whatsappUrl = `https://wa.me/${site.whatsapp}?text=${encodeURIComponent(site.whatsappMessage)}`;
---

<section class="py-16 md:py-20 bg-primary">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-surface rounded-md shadow-2xl p-8 md:p-12 text-center">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-[family-name:var(--font-display)] text-primary uppercase mb-4">
        Get Your Free Quote Today
      </h2>
      <p class="text-muted text-lg mb-8 max-w-xl mx-auto font-[family-name:var(--font-body)]">
        Contact {site.name} now for fast, professional service. We respond quickly and offer free quotes on all jobs.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <!-- Call Button -->
        <a
          href={`tel:${site.phoneRaw}`}
          class="flex flex-col items-center gap-3 bg-accent hover:bg-accent-light text-white px-6 py-5 rounded-md font-bold transition-colors duration-200 shadow-lg"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
            <path d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.12.37 2.33.57 3.57.57a1 1 0 011 1v3.49a1 1 0 01-1 1C10.07 22 2 13.93 2 3.01a1 1 0 011-1h3.5a1 1 0 011 1c0 1.25.2 2.45.57 3.57a1 1 0 01-.25 1.02l-2.2 2.19z"/>
          </svg>
          <span class="text-base">Call Now</span>
          <span class="text-sm font-normal opacity-90">{site.phone}</span>
        </a>

        <!-- WhatsApp Button -->
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col items-center gap-3 bg-green-600 hover:bg-green-700 text-white px-6 py-5 rounded-md font-bold transition-colors duration-200 shadow-lg"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span class="text-base">WhatsApp</span>
          <span class="text-sm font-normal opacity-90">Send a message</span>
        </a>

        <!-- Email Button -->
        <a
          href={`mailto:${site.email}?subject=Quote%20Request`}
          class="flex flex-col items-center gap-3 bg-primary hover:bg-primary-light text-white px-6 py-5 rounded-md font-bold transition-colors duration-200 shadow-lg"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
          <span class="text-base">Email Us</span>
          <span class="text-sm font-normal opacity-90">{site.email}</span>
        </a>
      </div>
    </div>
  </div>
</section>
