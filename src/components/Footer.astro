---
import { Image } from 'astro:assets';
import { site } from '../site.config';
import { getEdit } from '../utils/content-overrides';
import { getLogo } from '../images';
import LogoPlaceholder from './LogoPlaceholder.astro';

const currentYear = new Date().getFullYear();
const logo = getLogo();
const hasLogo = logo != null;
const whatsappUrl = `https://wa.me/${site.whatsapp}?text=${encodeURIComponent(site.whatsappMessage)}`;

const quickLinks = [
  ...site.nav,
  { label: 'Privacy Policy', href: '/privacy-policy/' },
];

const serviceLinks = site.services.map((s) => ({
  label: s.title,
  href: `/services/${s.slug}/`,
}));
---

<footer class="bg-primary text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div>
        <a href="/" class="inline-block mb-4">
          {hasLogo ? (
            <Image
              src={logo!}
              alt={site.name}
              height={80}
              width={240}
              class="h-20 w-auto max-w-[240px] rounded-md"
            />
          ) : (
            <LogoPlaceholder height={80} class="h-20 w-auto text-white" />
          )}
        </a>
        <p class="text-gray-300 text-sm leading-relaxed" data-edit="description">
          {getEdit('description', site.description)}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-[family-name:var(--font-display)] uppercase tracking-wide mb-4">
          Quick Links
        </h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-accent text-sm transition-colors duration-200"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-[family-name:var(--font-display)] uppercase tracking-wide mb-4">
          Services
        </h3>
        <ul class="space-y-2">
          {serviceLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-accent text-sm transition-colors duration-200"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-lg font-[family-name:var(--font-display)] uppercase tracking-wide mb-4">
          Contact Us
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={`tel:${site.phoneRaw}`}
              class="flex items-start gap-3 text-gray-300 hover:text-accent text-sm transition-colors duration-200"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.12.37 2.33.57 3.57.57a1 1 0 011 1v3.49a1 1 0 01-1 1C10.07 22 2 13.93 2 3.01a1 1 0 011-1h3.5a1 1 0 011 1c0 1.25.2 2.45.57 3.57a1 1 0 01-.25 1.02l-2.2 2.19z"/>
              </svg>
              {site.phone}
            </a>
          </li>
          <li>
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-start gap-3 text-gray-300 hover:text-accent text-sm transition-colors duration-200"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp
            </a>
          </li>
          <li>
            <a
              href={`mailto:${site.email}`}
              class="flex items-start gap-3 text-gray-300 hover:text-accent text-sm transition-colors duration-200"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
              {site.email}
            </a>
          </li>
          <li class="flex items-start gap-3 text-gray-300 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5a2.5 2.5 0 010-5 2.5 2.5 0 010 5z"/>
            </svg>
            {site.address.street}, {site.address.city}, {site.address.region}
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="border-t border-primary-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <p class="text-center text-gray-400 text-sm">
        &copy; {currentYear} {site.name}. All rights reserved. {site.legal.registrations.join('. ')}. Serving {site.address.city} &amp; {site.address.region} since {site.foundingYear}.
      </p>
    </div>
  </div>
</footer>
